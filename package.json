{
  "name": "logistics-route-resolver",
  "productName": "Logistics Route Resolver",
  "private": true,
  "version": "1.3.1",
  "author": "Darrien Wang",
  "description": "Warehouse Outbound Orchestration System aimed at optimizing logistics via cluster-based route resolution and dynamic stack management.",
  "type": "module",
  "main": "dist-electron/main.js",
  "scripts": {
    "dev": "vite",
    "dev:host": "set PORT=3000&& vite",
    "dev:client": "set PORT=3001&& vite",
    "dev:client2": "set PORT=3002&& vite",
    "build": "tsc && vite build",
    "preview": "vite preview",
    "electron:dev": "vite",
    "electron:build": "tsc && vite build && electron-builder",
    "release": "tsc && vite build && electron-builder --publish always"
  },
  "dependencies": {
    "@types/cors": "^2.8.19",
    "@types/express": "^5.0.6",
    "bufferutil": "^4.1.0",
    "cors": "^2.8.5",
    "electron-updater": "^6.3.9",
    "express": "^5.2.1",
    "internal-ip": "^8.0.1",
    "lucide-react": "^0.562.0",
    "react": "^19.2.3",
    "react-dom": "^19.2.3",
    "recharts": "^3.6.0",
    "utf-8-validate": "^6.0.6",
    "xlsx": "^0.18.5"
  },
  "devDependencies": {
    "@types/node": "^22.14.0",
    "@vitejs/plugin-react": "^5.0.0",
    "electron": "^39.2.7",
    "electron-builder": "^26.0.12",
    "electron-log": "^5.2.4",
    "typescript": "~5.8.2",
    "vite": "^6.2.0",
    "vite-plugin-electron": "^0.29.0",
    "vite-plugin-electron-renderer": "^0.14.6"
  },
  "build": {
    "appId": "com.darriengroup.logistics-route-resolver",
    "productName": "Logistics Route Resolver",
    "directories": {
      "output": "release"
    },
    "files": [
      "dist/**/*",
      "dist-electron/**/*"
    ],
    "win": {
      "target": [
        "nsis"
      ],
      "icon": "public/icon.ico"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true,
      "shortcutName": "Logistics Route Resolver"
    },
    "publish": {
      "provider": "github",
      "owner": "darrien-wang",
      "repo": "logistics-route-resolver"
    },
    "npmRebuild": false
  }
}